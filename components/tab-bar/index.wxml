<view class="container">

  <view class="icons">
    <view bind:tap="onGoToHome">
      <l-icon size="46" name="home" l-class="kapok"></l-icon>
      <text>首页</text>
    </view>

    <view bind:tap="onGoToCart">
      <l-badge max-count="99" show="{{cartItemCount!==0}}" value="{{cartItemCount}}">
        <l-icon size="44" color="#157658" name="cart"></l-icon>
      </l-badge>
      <text>购物车</text>
    </view>
  </view>

  <view bind:tap="onAddToCart" class="cart btn-font">
    <text>加入购物车</text>
  </view>

  <view bind:tap="onBuy" class="buy btn-font">
    <text>立即购买</text>
  </view>
</view>